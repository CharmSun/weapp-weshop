/* pages/order/order.wxss */
.page-title {
  height: 30px;
  line-height: 30px;
  padding-left: 20rpx;
  border-bottom: 1px solid #ededed;
  font-size: 32rpx;
}

.order {
  width:100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.order-items {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.order-time {
  height: 30px;
  line-height: 30px;
  padding-left: 20rpx;
}

.goods-item-image {
  width: 50px;
  height: 50px;
  border: 1px solid #e7e7e7;
  border-radius: 5px;
}

.order-status {
  height: 30px;
  line-height: 30px;
  padding-left: 20rpx;
  border-bottom: 1px solid #ededed;
}